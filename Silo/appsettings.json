{
    "Serilog": {
        "MinimumLevel": {
            "Default":  "Debug"
        },
        "Using": [
            "Serilog.Sinks.Console"
        ],
        "WriteTo": [
            { 
                "Name": "Console",
                "Args": {
                    "outputTemplate": "Silo {Timestamp:HH:mm:ss zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}" 
                }
            }
        ]
    },
    "ClusterOptions": {
        "ServiceId": "my-service",
        "ClusterId": "my-cluster"
    }
}