{
  "name": "OrleansPlayground Development Container",
  "dockerComposeFile": [
    "docker-compose.yaml"
  ],
  "runServices": [],
  "service": "development",
  "workspaceFolder": "/workspace/",
  "features": {
  },
  "mounts": [
    "source=${localEnv:HOME}/dev-containers/OrleansPlayground/home,target=/root,type=bind",
    "source=${localEnv:HOME}/.nuget,target=/root/.nuget,type=bind",
    "source=${localEnv:HOME}/.aws,target=/root/.aws,type=bind",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${localEnv:HOME}/.claude,target=/root/.claude,type=bind",
    "source=${localEnv:HOME}/.codex,target=/root/.codex,type=bind",
    "source=${localEnv:HOME}/.gnupg/S.gpg-agent,target=/run/gnupg/S.gpg-agent,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.gnupg/S.scdaemon,target=/run/gnupg/S.scdaemon,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "dotnet.defaultSolution": "OrleansPlayground.sln"
      },
      "extensions": [
        "asciidoctor.asciidoctor-vscode",
        "ckolkman.vscode-postgres",
        "dotjoshjohnson.xml",
        "editorconfig.editorconfig",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "graphql.vscode-graphql",
        "josefpihrt-vscode.roslynator",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "ms-dotnettools.csdevkit",
        "patcx.vscode-nuget-gallery",
        "redhat.vscode-yaml",
        "humao.rest-client",
        "tomrijndorp.find-it-faster"
      ]
    }
  },
  "remoteUser": "root",
  "remoteEnv": {
    "GPG_TTY": "${localEnv:TERM}",
    "GNUPG_SOCKETS_DIR": "/run/gnupg",
    "GIT_EDITOR": "code --wait"
  },
  "forwardPorts": [
    3000,
    8080
  ]
}